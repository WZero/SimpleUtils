<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zero.simple">

    <application
        android:name=".app.EasyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_tong"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BitmapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PaintsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecyclerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EasyScrollActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SpringBackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RefreshActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>